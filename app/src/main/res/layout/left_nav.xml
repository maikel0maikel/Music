<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_nav_bg_selector"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/nav_icon_iv"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_centerHorizontal="true"
        android:clickable="false" />

    <TextView
        android:id="@+id/nav_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/local_music"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorSubTextWhite"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/nav_icon_iv"
        android:textSize="20px" />

    <View
        android:id="@+id/my_line"
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:layout_marginBottom="5px"
        android:layout_marginTop="5px"
        android:background="@drawable/ic_nav_line_selector"
          />
</RelativeLayout>